<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardView_home_1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Money:"
                android:textColor="@color/white"
                android:textSize="35sp"></TextView>

            <TextView
                android:id="@+id/et_home_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textSize="35sp"

                ></TextView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardView_home_2"
        android:layout_below="@id/cardView_home_1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Clients:"
                android:textColor="@color/white"
                android:textSize="35sp"></TextView>

            <TextView
                android:id="@+id/et_home_clients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textSize="35sp"

                ></TextView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardView_home_3"
        android:layout_below="@id/cardView_home_2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Turn:    "
                android:textColor="@color/white"
                android:textSize="35sp"></TextView>

            <TextView
                android:id="@+id/et_home_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textSize="35sp"

                ></TextView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>






    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/home_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        app:active_centre_button_icon_color="@color/white"
        app:active_item_color="@color/ca"
        app:centre_button_color="@color/colorPrimaryDark"
        app:centre_button_icon="@drawable/home"
        app:inactive_centre_button_icon_color="@color/white"
        app:inactive_item_color="@color/white"
        app:space_background_color="@color/colorPrimary"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_icon_size="@dimen/space_item_icon_default_size"
        app:space_item_text_size="@dimen/space_item_text_default_size"


        ></com.luseen.spacenavigation.SpaceNavigationView>


</RelativeLayout>